    taggingLambda.lambdaFunction.addEnvironment('CONFIG_RULE_ARN', configRuleArn);

    const taggingProvider = new cr.Provider(this, ruleName + '-TagProvider', {
      onEventHandler: taggingLambda.lambdaFunction,
