      tags: taggingVars,
      timeout: 300,
      dynatraceConfig: false,
      existingRoleArn: hcopsAutomationAssumeRole,
      lambdaLogGroupKmsKeyArn: `arn:aws:kms:${region}:${accountID}:alias/${kmsEncryptionAliasID}`,
