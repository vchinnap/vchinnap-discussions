{
  "schemaVersion": "0.3",
  "description": "Sets the 'snapshot_required' tag to 'Yes' on the specified EC2 instance.",
  "assumeRole": "{{ AutomationAssumeRole }}",
  "parameters": {
    "AutomationAssumeRole": {
      "description": "(Optional) The ARN of the IAM role that allows automation to perform actions.",
      "type": "String"
    },
    "InstanceId": {
      "description": "(Required) The ID of the EC2 instance.",
      "type": "String"
    }
  },
  "mainSteps": [
    {
      "name": "TagInstanceSnapshotRequired",
      "action": "aws:executeAwsApi",
      "inputs": {
        "Service": "ec2",
        "Api": "CreateTags",
        "ResourceType": "instance",
        "ResourceIds": [
          "{{ InstanceId }}"
        ],
        "Tags": [
          {
            "Key": "snapshot_required",
            "Value": "Yes"
          }
        ]
      }
    }
  ]
}
